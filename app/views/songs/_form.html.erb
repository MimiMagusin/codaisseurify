<%= form_for [@artist, @artist.songs.new] do |f| %>
  <p><strong>Name Artist:</strong> <%= @artist.full_name %></p>

  <hr>

  <div class="form-group">
    <label>Title:</label>
    <%= f.text_field :title%>
  </div>

  <div class="form-group">
    <label>Release Year</label>
    <%= f.text_field :release_year%>
  </div>

   <%= f.hidden_field :artist_id, value: @artist.id %>

  <hr>

  <div class="actions">
    <%= f.submit "Add Song", class: "btn btn-success" %>
  </div>
<% end %>
